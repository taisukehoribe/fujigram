<div class="container">
  <div class="row">
    <div class="col-xs-2 ">
    </div>
    <div class="col-xs-8">
      <h2>Photos</h2><br>
        <% @photos.each do |photo| %>
      <div class="card text-center">
        <div class="row no-gutters">
          <div class="col-xs-4 my-auto">
              <div class="img-top">
                <%= link_to photo_path(photo) do %>
                <%= attachment_image_tag photo, :photo_image , format: 'jpeg', size: "200x200", fallback: "no_image.jpg"  %>
                <% end %>
              </div>
          </div>
          <div class="col-xs-8">
            <div class="card-profile"><%= attachment_image_tag photo.user, :profile_image, format: 'jpeg', size: "50x50" %></div>
            <div class="card-body">
              <h4 class="card-title"><%= photo.title %></h4>
              <p class="card-comment"><%= link_to "#{photo.photo_comments.count} コメント", photo_path(photo.id) %></p>
              <p class="card-favorite"><% if photo.favorited_by?(current_user) %>
                <%= link_to photo_favorites_path(photo), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @photo.favorites.count %> Nice
                <% end %>
              <% else %>
                <%= link_to photo_favorites_path(photo), method: :post do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= photo.favorites.count %> Nice
                <% end %>
              <% end %>
            </p>
            </div>
          </div>
        </div>
      </div>
        <% end %>
    </div>
  </div>
</div>
