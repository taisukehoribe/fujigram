<div class="container ">
    <div class="row">
        <% if @user.errors.any? %>
          <h2><%= @user.errors.count %>errors prohibited this user_profile from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="top-message col-md-offset-3 col-md-6">
            <h1>User info</h1>
        <%= form_for(@user, url:user_path) do |f| %>

            <div class="row">
                <label>Name</label>
                <%= f.text_field :name, class: "col-xs-12"%>
            </div>
            <div class="row">
                <label>Image</label>
                <%= f.attachment_field :profile_image %>
            </div>
            <div class="row">
            <label>Introducton</label>
            <%= f.text_area :introduction, class: "col-xs-12" %><br>
            </div><br>
            <div class="row">
                <p><%= f.submit 'Update User' , class: "btn btn-primary col-xs-12"  %></p>
            </div>
            <% end %>
        </div>
    </div>
</div>
