<div class="container">
  <div class="row">

    <div class="col-xs-2">
      <h4>User profile</h4>
      <!-- userのプロフィール写真 -->
      <div class="img">
        <%= attachment_image_tag @user, :profile_image , format: 'jpeg', size: "100x100", fallback: "no_image.jpg"  %>
      </div>
    </div>
      <br>
    <div class="col-xs-10">
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <p>プロフィールの編集</p>
        <p><%= link_to "", edit_user_path(@user.id), class: "btn btn-default col-xs-2 glyphicon glyphicon-wrench"%></p>
      </div><br>

      <h4>New Photo</h4>
        <%= form_for(@photo, url: '/photos') do |f| %>
        <div class="row">
          <label>Title</label>
           <%= f.text_field :title, class: "col-xs-12" %>
        </div>
        <div class="row">
          <label>Opinion</label>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div><br>
        <div class="row">
          <%= f.attachment_field :photo_image %>
        </div><br>
        <div class="row">
          <%= f.submit 'Create Photo of Mt.fuji', class: "btn btn-primary col-xs-3" %>
        </div>
        <% end %>
      </div>

    <div class="col-xs-12">
      <div class="text-center"><h2>Users</h2></div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>name</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %></td>
            <td><%= link_to user.name , user_path(user.id) %></td>
          </tr>
        </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>
